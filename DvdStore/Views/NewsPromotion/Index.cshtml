@model IEnumerable<DvdStore.Models.NewsPromotion>
@{
    Layout = "Dashboard";
    ViewData["Title"] = "Manage News & Promotions";
}

<h2>News & Promotions Management</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Create New
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Type</th>
            <th>Publish Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Title"
                             style="width: 80px; height: 60px; object-fit: cover; border-radius: 4px;">
                    }
                    else
                    {
                        <span class="text-muted">No Image</span>
                    }
                </td>
                <td>@item.Title</td>
                <td>
                    <span class="badge bg-@(item.Type == "News" ? "info" : item.Type == "Promotion" ? "warning" : "success")">
                        @item.Type
                    </span>
                </td>
                <td>@item.PublishDate.ToString("MMM dd, yyyy")</td>
                <td>
                    <span class="badge bg-@(item.IsActive ? "success" : "secondary")">
                        @(item.IsActive ? "Active" : "Inactive")
                    </span>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NewsID" class="btn btn-sm btn-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@item.NewsID" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this item?')">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No news or promotions found. <a asp-action="Create">Create your first one</a>.
    </div>
}