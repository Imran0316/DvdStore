@model DvdStore.Models.NewsPromotion
@{
    ViewData["Title"] = Model.Title;
    Layout = "_Layout1";
}

<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="hero__text">
                    <h2>@Model.Title</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item"><a href="/NewsPromotion/News">News & Promotions</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product spad">
    <div class="container">
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <article class="news-detail">
                    <!-- Header -->
                    <div class="news-header mb-4">
                        <span class="badge bg-@(Model.Type == "News" ? "info" : Model.Type == "Promotion" ? "warning" : "success") mb-2">
                            @Model.Type
                        </span>
                        <h1 class="news-title">@Model.Title</h1>

                        <div class="news-meta text-muted mb-3">
                            <i class="fas fa-calendar-alt"></i> Published: @Model.PublishDate.ToString("MMMM dd, yyyy")
                            @if (Model.ExpiryDate.HasValue)
                            {
                                <span class="ms-3">
                                    <i class="fas fa-clock"></i> Expires: @Model.ExpiryDate.Value.ToString("MMMM dd, yyyy")
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Featured Image -->
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="news-image mb-4">
                            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded"
                                 style="max-height: 400px; width: 100%; object-fit: cover;">
                        </div>
                    }

                    
                    <!-- Content with advanced formatting -->
                    <div class="news-content">
                        @if (!string.IsNullOrEmpty(Model.Content))
                        {
                            // Split into paragraphs for better control
                            var paragraphs = Model.Content.Split(new[] { "\r\n\r\n", "\n\n" }, StringSplitOptions.RemoveEmptyEntries);

                            foreach (var paragraph in paragraphs)
                            {
                                var formattedParagraph = paragraph.Replace("\r\n", "<br>")
                                .Replace("\n", "<br>");
                                <p>@Html.Raw(formattedParagraph)</p>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No content available.</p>
                        }
                    </div>

                    <!-- Related Product -->
                    @if (Model.Product != null)
                    {
                        <div class="related-product mt-5 p-4 bg-light rounded">
                            <h4>Related Product</h4>
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(Model.Product.ProductImageUrl))
                                {
                                    <img src="@Model.Product.ProductImageUrl" alt="@Model.Product.tbl_Albums?.Title"
                                         class="me-3" style="width: 80px; height: 80px; object-fit: cover;">
                                }
                                <div>
                                    <h5>@Model.Product.tbl_Albums?.Title</h5>
                                    <p class="text-muted mb-1">Price: $@Model.Product.Price.ToString("0.00")</p>
                                    <a href="/ProductDetail/Index/@Model.Product.ProductID" class="btn btn-primary btn-sm">
                                        View Product
                                    </a>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="news-actions mt-4">
                        <a href="/NewsPromotion/News" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to News
                        </a>
                        <div class="float-end">
                            <button class="btn btn-outline-primary me-2">
                                <i class="fas fa-share-alt"></i> Share
                            </button>
                            <button class="btn btn-outline-danger">
                                <i class="fas fa-print"></i> Print
                            </button>
                        </div>
                    </div>
                </article>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="sidebar">
                    <!-- Related News -->
                    @if (ViewBag.RelatedNews != null && ((List<NewsPromotion>)ViewBag.RelatedNews).Any())
                    {
                        <div class="sidebar-widget mb-4">
                            <h4 class="widget-title">Related News</h4>
                            <div class="related-news-list">
                                @foreach (var related in ViewBag.RelatedNews)
                                {
                                    <div class="related-news-item mb-3">
                                        <h6>
                                            <a href="/NewsPromotion/Detail/@related.NewsID"
                                               class="text-decoration-none">@related.Title</a>
                                        </h6>
                                        <small class="text-muted">@related.PublishDate.ToString("MMM dd, yyyy")</small>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Newsletter Signup -->
                    <div class="sidebar-widget mb-4">
                        <h4 class="widget-title">Stay Updated</h4>
                        <p class="text-muted">Subscribe to our newsletter for the latest news and promotions.</p>
                        <form>
                            <div class="input-group">
                                <input type="email" class="form-control" placeholder="Your email" required>
                                <button class="btn btn-primary" type="submit">Subscribe</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>

    /* Container constraints */
    .container {
        max-width: 1200px;
    }

    .news-detail {
        max-width: 100%;
        box-sizing: border-box;
    }

    /* Force long words to break */
    .news-content {
        overflow-wrap: break-word;
        word-break: break-word;
        hyphens: auto;
    }

        /* Prevent code blocks from overflowing */
        .news-content pre {
            white-space: pre-wrap;
            word-wrap: break-word;
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 5px;
            overflow-x: auto;
            max-width: 100%;
        }

        /* Style for embedded content */
        .news-content iframe,
        .news-content video {
            max-width: 100%;
            height: auto;
        }

    .news-detail {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 2px 20px rgba(0,0,0,0.1);
        overflow-wrap: break-word; /* Prevent text overflow */
        word-wrap: break-word;
    }

    .news-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    .news-content {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #555;
        overflow-wrap: break-word;
        word-wrap: break-word;
        hyphens: auto;
    }

        /* Prevent long URLs and text from breaking layout */
        .news-content a {
            word-break: break-all;
        }

        /* Style for paragraphs and line breaks */
        .news-content p {
            margin-bottom: 1.5rem;
            text-align: justify;
        }

        .news-content br {
            margin-bottom: 1rem;
            display: block;
            content: "";
        }

    /* Ensure images don't overflow */
    .news-image img {
        max-width: 100%;
        height: auto;
        display: block;
    }

    .sidebar-widget {
        background: white;
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        overflow-wrap: break-word;
    }

    .widget-title {
        color: #2c3e50;
        border-bottom: 2px solid #e53637;
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
        font-size: 1.2rem;
    }

    .related-news-item {
        padding: 0.5rem 0;
        border-bottom: 1px solid #eee;
    }

        .related-news-item:last-child {
            border-bottom: none;
        }

    .news-actions {
        padding-top: 2rem;
        border-top: 1px solid #eee;
        margin-top: 2rem;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .news-detail {
            padding: 1rem;
            margin: 0 -15px;
            border-radius: 0;
        }

        .news-title {
            font-size: 1.5rem;
        }

        .news-content {
            font-size: 1rem;
        }

        .row {
            margin: 0;
        }

        .col-lg-8, .col-lg-4 {
            padding: 0;
        }
    }

    /* Table styling */
    .news-content table {
        width: 100%;
        border-collapse: collapse;
        margin: 1rem 0;
        overflow-x: auto;
        display: block;
    }

    .news-content table, .news-content th, .news-content td {
        border: 1px solid #ddd;
    }

    .news-content th, .news-content td {
        padding: 0.5rem;
        text-align: left;
    }

    /* List styling */
    .news-content ul, .news-content ol {
        margin: 1rem 0;
        padding-left: 2rem;
    }

    .news-content li {
        margin-bottom: 0.5rem;
    }
</style>

@section Scripts {
    <script>
        // Print functionality
        document.querySelector('.btn-outline-danger').addEventListener('click', function() {
            window.print();
        });

        // Share functionality (basic)
        document.querySelector('.btn-outline-primary').addEventListener('click', function() {
            if (navigator.share) {
                navigator.share({
                    title: '@Model.Title',
                    text: '@Model.Title',
                    url: window.location.href
                });
            } else {
                alert('Share this URL: ' + window.location.href);
            }
        });
    </script>
}