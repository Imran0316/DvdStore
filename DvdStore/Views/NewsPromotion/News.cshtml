@model IEnumerable<DvdStore.Models.NewsPromotion>
@{
    ViewData["Title"] = "News & Promotions";
    Layout = "_Layout1";
}

<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="hero__text">
                    <h2>News & Promotions</h2>
                    <p>Stay updated with our latest news and special offers</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product spad">
    <div class="container">
@*         <!-- DEBUG: Show count and filter info -->
        <div class="alert alert-info">
            <h5>Debug Information:</h5>
            <p>Found @Model.Count() news items</p>
            <p>Current Server Time: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</p>
        </div> *@

        <div class="row">
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-6 mb-4">
                        <div class="card h-100 news-card">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title"
                                     style="height: 250px; object-fit: cover;">
                            }
                            <div class="card-body">
                                <span class="badge bg-@(item.Type == "News" ? "info" : item.Type == "Promotion" ? "warning" : "success") mb-2">
                                    @item.Type
                                </span>
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">
                                    @(item.Content.Length > 150 ? item.Content.Substring(0, 150) + "..." : item.Content)
                                </p>
                                <small class="text-muted">Published: @item.PublishDate.ToString("MMM dd, yyyy")</small>

                                <!-- DEBUG: Show item status -->
@*                                 <div class="mt-2 p-2 bg-light rounded">
                                    <small class="text-muted">
                                        <strong>Status:</strong><br>
                                        • Active: @item.IsActive<br>
                                        • Published: @(item.PublishDate <= DateTime.Now)<br>
                                        • Expired: @(item.ExpiryDate != null && item.ExpiryDate < DateTime.Now)<br>
                                        • Expiry: @(item.ExpiryDate?.ToString("MMM dd, yyyy") ?? "Never")
                                    </small>
                                </div> *@
                            </div>
                            <div class="card-footer">
                                <a href="/NewsPromotion/Detail/@item.NewsID" class="read-more-btn">Read More →</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
                    <h4>No news or promotions available</h4>
                    <p class="text-muted">Check back later for updates!</p>

                    <!-- DEBUG: Show possible reasons -->
                    <div class="mt-3 alert alert-warning">
                        <h6>Possible reasons why no content is showing:</h6>
                        <ul class="list-unstyled">
                            <li>• Content is not active (IsActive = false)</li>
                            <li>• Publish date is in the future</li>
                            <li>• Content has expired (ExpiryDate is in the past)</li>
                            <li>• No content has been added yet</li>
                            <li>• Database connection issues</li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .news-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: 1px solid #e0e0e0;
    }

        .news-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

    .read-more-btn {
        color: #e53637;
        text-decoration: none;
        font-weight: 500;
    }

        .read-more-btn:hover {
            color: #c52a2b;
            text-decoration: underline;
        }
</style>