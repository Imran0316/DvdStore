@{
    Layout = null;
    var ctrl = (ViewContext.RouteData.Values["controller"] ?? "").ToString().ToLower();
    var act = (ViewContext.RouteData.Values["action"] ?? "").ToString().ToLower();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - DVD Store Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" rel="stylesheet" />

    <style>
        :root {
            --sidebar-width: 260px;
            --sidebar-collapsed: 80px;
            --brand-color: #1f2937; /* dark */
            --accent: #d97706; /* golden-ish */
        }

        body {
            font-family: "Inter", "Segoe UI", Tahoma, sans-serif;
            background: #f4f6f9;
        }

        /* Layout */
        .sb-topnav {
            background: linear-gradient(180deg,#0b1220,#111827);
            box-shadow: 0 2px 8px rgba(2,6,23,0.15);
            
        }

        .sb-sidenav{
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: var(--sidebar-width);
            background: #0f1724;
            color: #cbd5e1;
            padding-top: 60px;
            transition: width .22s ease;
            /* display: flex; */
            overflow-y: auto ;
            overflow-x: hidden !important;
        }

            .sb-sidenav .brand {
                position: absolute; 
                top: 12px;
                right: 0px;
                display: flex;
                align-items: center;
                gap: .6rem;
                color: #fff;
                font-weight: 600;
            }

            .sb-sidenav .nav-link {
                color: #cbd5e1;
                padding: .65rem 1rem;
                display: flex;
                align-items: center;
                gap: .8rem;
                transition: background .15s, color .15s, transform .08s;
                border-radius: 8px;
                margin: 6px 8px;
            }

                .sb-sidenav .nav-link i {
                    min-width: 20px;
                    text-align: center;
                    font-size: 16px;
                }

                .sb-sidenav .nav-link:hover {
                    background: rgba(255,255,255,0.03);
                    color: #fff;
                    transform: translateX(4px);
                }

                .sb-sidenav .nav-link.active {
                    background: linear-gradient(90deg, rgba(217,119,6,0.12), rgba(255,255,255,0.02));
                    color: #fff;
                    box-shadow: inset 3px 0 0 var(--accent);
                }

        /* Collapsed state */
        body.sb-sidenav-collapsed .sb-sidenav {
            width: var(--sidebar-collapsed);
        }

        body.sb-sidenav-collapsed #layoutSidenav_content {
            margin-left: var(--sidebar-collapsed);
        }
        .logo{
        font-family: 'Oswald', sans-serif;
        font-size: 28px;
        font-weight: 700;
        color: white !important;
        text-decoration: none;
        }

        .logo span {
            color: red;
        }
        #layoutSidenav_content {
            margin-left: var(--sidebar-width);
            transition: margin .22s ease;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* shorten label text when collapsed */
        body.sb-sidenav-collapsed .nav .nav-text {
            display: none;
        }

        body.sb-sidenav-collapsed .nav .nav-icon-only {
            display: inline-block;
            margin-left: 6px;
        }

        /* Main content */
        main {
            padding: 28px;
            flex: 1;
        }

        .top-cards .card {
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(14,30,37,0.05);
        }

        .card .stat {
            font-weight: 700;
            font-size: 1.6rem;
        }

        .card small {
            color: #6b7280;
        }

        /* Footer */
        footer {
            background: #fff;
            border-top: 1px solid #e6eef7;
            padding: 14px 0;
            color: #6b7280;
        }

        /* Responsive tweaks */
        @@media (max-width: 992px) {
    .sb-sidenav {
        position: fixed;
        top: 0;
        left: -100%;
        width: var(--sidebar-width, 240px);
        height: 100%;
        background: #0f1724;
        z-index: 1050;
        transition: left 0.3s ease;
    }

    body.sb-sidenav-show .sb-sidenav {
        left: 0;
    }

    #layoutSidenav_content {
        margin-left: 0 !important;
    }
}
        /* jab collapse ho tab text hide ho but icon dikhna chahiye */
        body.sb-sidenav-collapsed .nav-text {
            display: none;
        }

        body.sb-sidenav-collapsed .nav-link i {
            margin-right: 0; /* icons properly align ho jaye */
        }

        /* Default (desktop) */
        .sb-sidenav {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: var(--sidebar-width);
            background: #0f1724;
            color: #cbd5e1;
            padding-top: 60px;
            transition: all 0.3s ease;
            z-index: 1030;
        }

        #layoutSidenav_content {
            margin-left: var(--sidebar-width);
            transition: margin 0.3s ease;
        }

        /* Desktop collapsed */
        body.sb-sidenav-collapsed .sb-sidenav {
            width: var(--sidebar-collapsed);
        }

        body.sb-sidenav-collapsed #layoutSidenav_content {
            margin-left: var(--sidebar-collapsed);
        }

        /* Mobile: sidebar hidden by default */
        @@media (max-width: 992px) {
            .sb-sidenav

        {
            left: -100%;
            width: var(--sidebar-width);
        }

        body.sb-sidenav-show+ .sb-sidenav {
            left: 0;
        }

        #layoutSidenav_content {
            margin-left: 0 !important;
        }

        }
        
       
 </style>
</head>
<body>

    <!-- Sidebar + Content -->
    <div id="layoutSidenav">
        <aside class="sb-sidenav">
            <div class="brand">
                <button class="btn btn-link text-white me-2" id="sidebarToggle"><i class="fa fa-bars"></i></button>
            </div>
            <nav class="nav flex-column mt-3">
                <a class="nav-link @(ctrl == "admin" ? "active" : "")" asp-controller="Admin" asp-action="Index">
                    <i class="fa fa-home"></i><span class="nav-text"> Dashboard</span>
                </a>

                <a class="nav-link @(ctrl == "admin" ? "active" : "")" asp-controller="Admin" asp-action="Profile">
                    <i class="fa fa-user"></i><span class="nav-text"> Profile</span>
                </a>

                <a class="nav-link @(ctrl == "category" ? "active" : "")" asp-controller="Category" asp-action="Categories">
                    <i class="fa fa-list"></i><span class="nav-text"> Categories</span>
                </a>

                <a class="nav-link @(ctrl == "suppliers" ? "active" : "")" asp-controller="Suppliers" asp-action="Suppliers">
                    <i class="fa fa-truck"></i><span class="nav-text"> Suppliers</span>
                </a>
                <a class="nav-link @(ctrl == "producers" ? "active" : "")" asp-controller="Producer" asp-action="Producer">
                    <i class="fa fa-truck"></i><span class="nav-text"> Producers</span>
                </a>

                <!-- Collapsible Catalog group -->
                <a class="nav-link d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#catalogCollapse" role="button" aria-expanded="false" aria-controls="catalogCollapse">
                    <span><i class="fa fa-box-open"></i><span class="nav-text"> Catalog</span></span>
                    <i class="fa fa-chevron-down small"></i>
                </a>
                <div class="collapse @( (ctrl=="products" || ctrl=="albums" || ctrl=="songs") ? "show" : "")" id="catalogCollapse">
                    <nav class="nav flex-column ms-3">
                        <a class="nav-link small @(ctrl == "products" ? "active" : "")" asp-controller="Products" asp-action="Products">
                            <i class="fa fa-shopping-basket"></i><span class="nav-text"> Products</span>
                        </a>
                        <a class="nav-link small @(ctrl == "albums" ? "active" : "")" asp-controller="Albums" asp-action="Albums">
                            <i class="fa fa-compact-disc"></i><span class="nav-text"> Albums</span>
                        </a>
                        <a class="nav-link small @(ctrl == "songs" ? "active" : "")" asp-controller="Songs" asp-action="Songs">
                            <i class="fa fa-music"></i><span class="nav-text"> Songs</span>
                        </a>
                    </nav>
                </div>

                <a class="nav-link @(ctrl == "artists" ? "active" : "")" asp-controller="Artist" asp-action="Artists">
                    <i class="fa fa-microphone"></i><span class="nav-text"> Artists</span>
                </a>

                <a class="nav-link @(ctrl == "orders" ? "active" : "")" asp-controller="Orders" asp-action="Index">
                    <i class="fa fa-shopping-cart"></i><span class="nav-text"> Orders</span>
                </a>

                <a class="nav-link @(ctrl == "reports" ? "active" : "")" asp-controller="Reports" asp-action="Index">
                    <i class="fa fa-chart-line"></i><span class="nav-text"> Reports</span>
                </a>

                <a class="nav-link @(ctrl == "Users" ? "active" : "")" asp-controller="Admin" asp-action="Users">
                    <i class="fa fa-chart-line"></i><span class="nav-text"> Users</span>
                </a>

                <a class="nav-link @(ctrl == "HeroImages" ? "active" : "")" asp-controller="HeroImages" asp-action="Index">
                    <i class="fa-regular fa-images"></i><span class="nav-text"> Hero Images</span>
                </a>

                <a class="nav-link @(ctrl == "NewsPromotion" ? "active" : "")" asp-controller="NewsPromotion" asp-action="Index">
                    <i class="fa-solid fa-rectangle-ad"></i><span class="nav-text"> News & Promotions</span>
                </a>

                <a class="nav-link @(ctrl == "feedback" ? "active" : "")" asp-controller="Feedback" asp-action="Index">
                    <i class="fa fa-comments"></i><span class="nav-text"> Feedback</span>
                </a>

                <div class="mt-3 px-3">
                    <small class="text-muted">Quick Actions</small>
                    <div class="d-grid gap-2 mt-2">
                        <a class="btn btn-sm btn-outline-light" asp-controller="Albums" asp-action="Create"><i class="fa fa-plus me-2"></i> New Album</a>
                        <a class="btn btn-sm btn-outline-light" asp-controller="Products" asp-action="Create"><i class="fa fa-plus me-2"></i> New Product</a>
                    </div>
                </div>
            </nav>
        </aside>

        <div id="layoutSidenav_content">
            <!-- Top Navbar -->
            <nav class="sb-topnav navbar navbar-expand navbar-dark ">
                <div class="container-fluid px-3">
                    <a class=" logo" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-play-circle me-2 " style="color: red;"></i>Entertainment<span>Hub</span>
                    </a>

                    <form class="d-none d-md-flex ms-4 w-50">
                        <div class="input-group">
                            <input class="form-control form-control-sm" type="search" placeholder="Search products, orders, users..." aria-label="Search">
                            <button class="btn btn-sm btn-outline-light" type="button"><i class="fa fa-magnifying-glass"></i></button>
                        </div>
                    </form>

                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item dropdown me-2">
                            <a class="nav-link position-relative text-white" href="#" id="notifDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-bell"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="notifDropdown" style="width:320px;">
                                <li class="p-3 border-bottom"><strong>Notifications</strong></li>
                                <li><a class="dropdown-item small" href="#">New order #1024 placed <br /><small class="text-muted">10 minutes ago</small></a></li>
                                <li><a class="dropdown-item small" href="#">New user registered <br /><small class="text-muted">1 hour ago</small></a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="text-center"><a class="dropdown-item small text-primary" href="#">View all</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white d-flex align-items-center" id="userDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle" style="font-size:32px;color:#6c757d;margin-right:8px;"></i>                                <span class="d-none d-sm-inline">Admin</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="fa fa-user me-2"></i> Profile</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Settings"><i class="fa fa-gear me-2"></i> Settings</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout"><i class="fa fa-sign-out-alt me-2"></i> Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>

            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>

            <footer class="text-center">
                <div class="container">
                    <div class="small">&copy; @DateTime.Now.Year — Designed & Developed by <strong>Imran & Qasim</strong></div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function(){
            const body = document.body;
            const toggle = document.getElementById('sidebarToggle');

            // -------- Desktop restore state --------
            if (window.innerWidth >= 992) {
                if (localStorage.getItem('sb|sidebar-collapsed') === 'true') {
                    body.classList.add('sb-sidenav-collapsed');
                }
            }

            // -------- Toggle click --------
            toggle.addEventListener('click', function(e){
                e.preventDefault();

                if (window.innerWidth < 992) {
                    // Mobile: slide in/out sidebar
                    body.classList.toggle('sb-sidenav-show');
                } else {
                    // Desktop: collapse/expand sidebar
                    body.classList.toggle('sb-sidenav-collapsed');
                    localStorage.setItem('sb|sidebar-collapsed',
                        body.classList.contains('sb-sidenav-collapsed'));
                }
            });

            // -------- Window resize fix --------
            window.addEventListener('resize', function(){
                if (window.innerWidth < 992) {
                    body.classList.remove('sb-sidenav-collapsed'); // force expand
                } else {
                    body.classList.remove('sb-sidenav-show'); // remove mobile overlay
                }
            });
        })();
    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>
