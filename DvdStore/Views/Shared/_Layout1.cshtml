        .custom-toast {
            border-radius: 8px;
            border: none;
            font-weight: 500;
        }

            .custom-toast.alert-success {
                background: linear-gradient(135deg, #28a745, #20c997);
                color: white;
            }

            .custom-toast.alert-danger {
                background: linear-gradient(135deg, #dc3545, #fd7e14);
                color: white;
            }

            .custom-toast .btn-close {
                filter: invert(1);
            }


        /* Add this to your CSS */
        .add-to-cart-form {
            display: inline;
        }

        .add-cart-btn {
            background: none !important;
            border: none !important;
            color: #e53637 !important;
            cursor: pointer !important;
            padding: 0 !important;
            font: inherit !important;
            text-decoration: none !important;
            display: inline !important;
        }

            .add-cart-btn:hover {
                color: #c52a2b !important;
                text-decoration: underline !important;
            }

            /* Remove any outline on focus for better appearance */
            .add-cart-btn:focus {
                outline: none !important;
                box-shadow: none !important;
            }

        /* Add this to your CSS section */
        a[href="#"] {
            outline: none !important;
        }

            a[href="#"]:focus {
                outline: none !important;
            }

        /* Prevent default behavior for hash links */
        a[href="#"] {
            cursor: pointer;
        }

        /* Specific style for checkout button */
        .checkout-btn {
            text-decoration: none !important;
            display: block;
            text-align: center;
            margin-top: 15px;
            transition: all 0.3s ease;
        }

            .checkout-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(229, 54, 55, 0.3);
            }

        .login-prompt {
            text-align: center;
        }

        .rating-input {
            display: flex;
            flex-direction: row-reverse;
            justify-content: flex-end;
            gap: 5px;
        }

            .rating-input input {
                display: none;
            }

            .rating-input label {
                cursor: pointer;
                font-size: 2rem;
                color: #ddd;
                transition: color 0.2s;
            }

            .rating-input input:checked ~ label {
                color: #ffc107;
            }

            .rating-input label:hover,
            .rating-input label:hover ~ label {
                color: #ffc107;
            }

        .star-label {
            cursor: pointer;
        }
    </style>
</head>
