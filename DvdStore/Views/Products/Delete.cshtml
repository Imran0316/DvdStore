@model DvdStore.Models.Products

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h4>Are you sure you want to delete this product?</h4>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Album</dt>
        <dd class="col-sm-10">@Model.tbl_Albums?.Title</dd>

        <dt class="col-sm-2">Supplier</dt>
        <dd class="col-sm-10">@Model.tbl_Suppliers?.SupplierName</dd>

        <dt class="col-sm-2">Producer</dt>
        <dd class="col-sm-10">@Model.tbl_Producers?.ProducerName</dd>

        <dt class="col-sm-2">SKU</dt>
        <dd class="col-sm-10">@Model.SKU</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
