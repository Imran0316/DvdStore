@model DvdStore.Models.Cart
@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "_Layout1";
}

<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="cart__title">
                    <h2>Shopping Cart</h2>
                </div>

                @if (Model?.tbl_CartItems != null && Model.tbl_CartItems.Any())
                {
                    <div class="cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.tbl_CartItems)
                                {
                                    <tr>
                                        <td class="cart__product__item">
                                            <img src="@item.tbl_Products.ProductImageUrl" alt="" width="80">
                                            <div class="cart__product__item__title">
                                                <h6>@item.tbl_Products.tbl_Albums?.Title</h6>
                                                <p>By: @item.tbl_Products.tbl_Producers?.ProducerName</p>
                                            </div>
                                        </td>
                                        <td class="cart__price">$@item.tbl_Products.Price</td>
                                        <td class="cart__quantity">
                                            <form asp-controller="Cart" asp-action="UpdateQuantity" method="post" class="d-inline">
                                                <input type="hidden" name="cartItemId" value="@item.CartItemID" />
                                                <input type="number" name="quantity" value="@item.Quantity" min="1"
                                                       style="width: 60px;" onchange="this.form.submit()" />
                                            </form>
                                        </td>
                                        <td class="cart__total">$@(item.tbl_Products.Price* item.Quantity)</td>
                                        <td class="cart__close">
                                            <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                                                <input type="hidden" name="cartItemId" value="@item.CartItemID" />
                                                <button type="submit" style="background: none; border: none; cursor: pointer;">
                                                    <i class="fa fa-close"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="cart__btn">
                                <a href="/Home/Products">Continue Shopping</a>
                            </div>
                        </div>
                        <div class="col-lg-4 offset-lg-2 col-md-4 offset-md-2 col-sm-6">
                            <div class="col-lg-4 offset-lg-2 col-md-4 offset-md-2 col-sm-6">
                                <div class="cart__total__procced">
                                    <h6>Cart Total</h6>
                                    <ul>
                                        <li>Subtotal <span>$@Model.tbl_CartItems.Sum(i => i.tbl_Products.Price * i.Quantity)</span></li>
                                        <li>Shipping <span>Free</span></li>
                                        <li>Total <span class="total-price">$@Model.tbl_CartItems.Sum(i => i.tbl_Products.Price * i.Quantity)</span></li>
                                    </ul>

                                    @if (Context.Session.GetInt32("UserId") != null)
                                    {
                                        <!-- Option 1: Use ASP.NET Tag Helpers (recommended) -->
                                        <a asp-controller="Checkout" asp-action="ReviewOrder" class="primary-btn checkout-btn">
                                            <i class="fas fa-arrow-right me-2"></i>Proceed to Checkout
                                        </a>

                                        <!-- OR Option 2: Use Url.Action -->
                                        <!--
                                        <a href="@Url.Action("ReviewOrder", "Checkout")" class="primary-btn checkout-btn">
                                            <i class="fas fa-arrow-right me-2"></i>Proceed to Checkout
                                        </a>
                                        -->
                                    }
                                    else
                                    {
                                        <a asp-controller="Auth" asp-action="Login" class="primary-btn checkout-btn">
                                            <i class="fas fa-sign-in-alt me-2"></i>Login to Checkout
                                        </a>
                                        <p class="login-prompt small text-muted mt-2">Please login to proceed with checkout</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="cart__empty">
                        <i class="fa fa-shopping-cart"></i>
                        <h4>Your cart is empty</h4>
                        <p>Looks like you haven't added any items to your cart yet.</p>
                        <a href="/Home/Products" class="primary-btn">Continue Shopping</a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<style>
    .cart__empty {
        text-align: center;
        padding: 50px 0;
    }

        .cart__empty i {
            font-size: 60px;
            color: #ddd;
            margin-bottom: 20px;
        }

    .cart__table table {
        width: 100%;
        border-collapse: collapse;
    }

    .cart__table th, .cart__table td {
        padding: 15px;
        border-bottom: 1px solid #eee;
        text-align: center;
    }

    .cart__product__item {
        display: flex;
        align-items: center;
        text-align: left;
    }

        .cart__product__item img {
            margin-right: 15px;
            border-radius: 5px;
        }

    .add-cart-btn:hover {
        text-decoration: underline;
    }
</style>