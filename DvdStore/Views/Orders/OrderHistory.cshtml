@model IEnumerable<DvdStore.Models.Orders>
@{
    ViewData["Title"] = "My Order History";
    Layout = "_Layout1";
}

<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="hero__text">
                    <h2>My Order History</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product spad">
    <div class="container">
        @if (Model.Any())
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Order #</th>
                                    <th>Order Date</th>
                                    <th>Total Amount</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>#@order.OrderID</td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                        <td>$@order.TotalAmount.ToString("N2")</td>
                                        <td>
                                            <span class="badge bg-@(order.Status == "Completed" ? "success" :
                                                                                                                order.Status == "Processing" ? "warning" :
                                                                                                                order.Status == "Shipped" ? "info" : "secondary")">
                                        @order.Status
                                    </span>
                                </td>
                                <td>
                                    <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.OrderID"
                                       class="btn btn-sm btn-primary">View Details</a>
                                </td>
                            </tr>
                                                        }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>You haven't placed any orders yet.</p>
                    <a asp-controller="Home" asp-action="Products" class="btn btn-primary">Start Shopping</a>
                </div>
            </div>
        }
    </div>
</section>