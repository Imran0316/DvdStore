@model DvdStore.Models.Orders
@{
    ViewData["Title"] = "Order Details";
    Layout = "Dashboard";
}

<h2>Order Details - #@Model.OrderID</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Order Information</h5>
            </div>
            <div class="card-body">
                <p><strong>Customer:</strong> @Model.tbl_Users?.Name</p>
                <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                <p><strong>Total Amount:</strong> $@Model.TotalAmount.ToString("N2")</p>
                <p><strong>Status:</strong> <span class="badge bg-info">@Model.Status</span></p>
                <p><strong>Shipping Address:</strong> @Model.ShippingAddress</p>
            </div>
        </div>
    </div>
</div>

<h4 class="mt-4">Order Items</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.tbl_OrderDetails)
        {
            <tr>
                <td>@item.tbl_Products.tbl_Albums?.Title</td>
                <td>$@item.UnitPrice.ToString("N2")</td>
                <td>@item.Quantity</td>
                <td>$@((item.UnitPrice * item.Quantity).ToString("N2"))</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to Orders</a>