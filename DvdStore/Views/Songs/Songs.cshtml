@model IEnumerable<DvdStore.Models.Songs>
@{
    Layout = "Dashboard"; 
    ViewBag.Title = "Songs";
}

<h2>Manage Songs</h2>

<!-- Add New Song Form -->
<form asp-action="Songs" method="post" enctype="multipart/form-data" class="mb-3">
    <div class="row">
        <div class="col-md-3">
            <input name="Title" placeholder="Song Title" class="form-control" required />
        </div>
        <div class="col-md-2">
            <input type="time" name="Duration" class="form-control" />
        </div>
        <div class="col-md-3">
            <select name="AlbumID" class="form-control" required>
                <option value="">-- Select Album --</option>
                @foreach (var album in ViewBag.Albums)
                {
                    <option value="@album.AlbumID">@album.Title</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <input type="file" name="AudioFile" class="form-control" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Add Song</button>
        </div>
    </div>
</form>

<!-- Songs Table -->
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Duration</th>
            <th>Album</th>
            <th>File</th>
            <th>Download</th> <!-- ADD THIS -->
            <th style="width:150px;">Actions</th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int count = 1;
            foreach (var s in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@s.Title</td>
                    <td>@s.Duration</td>
                    <td>@s.Album?.Title</td>
                    <td>
                        @if (!string.IsNullOrEmpty(s.FileUrl))
                        {
                            <audio controls src="@s.FileUrl" style="max-width:350px;"></audio>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(s.FileUrl))
                        {
                            <a href="@s.FileUrl" download class="btn btn-sm btn-success">
                                <i class="fas fa-download"></i> Download
                            </a>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="EditSong" asp-route-id="@s.SongID">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="DeleteSong" asp-route-id="@s.SongID" onclick="return confirm('Are you sure you want to delete this song?');">Delete</a>
                    </td>
                </tr>
                count++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No songs found.</td>
            </tr>
        }
    </tbody>
</table>
