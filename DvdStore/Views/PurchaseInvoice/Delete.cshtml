@model DvdStore.Models.PurchaseInvoice
@{
    Layout = "Dashboard";
    ViewData["Title"] = "Delete Purchase Invoice";
}

<h2>Delete Purchase Invoice</h2>

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete this invoice?
    <br /> This action will also revert product stock changes.
</div>

<div class="mb-3">
    <h5>Invoice Information</h5>
    <p>
        <strong>Invoice #:</strong> @Model.PurchaseInvoiceID <br />
        <strong>Date:</strong> @Model.InvoiceDate.ToString("dd MMM yyyy") <br />
        <strong>Supplier:</strong> @Model.tbl_Suppliers?.SupplierName <br />
        <strong>Total Amount:</strong> @Model.TotalAmount?.ToString("N2")
    </p>
</div>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Product</th>
            <th class="text-end">Qty</th>
            <th class="text-end">Unit Cost</th>
            <th class="text-end">Line Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model.InvoiceDetails)
        {
            <tr>
                <td>@d.tbl_Products?.tbl_Albums?.Title</td>
                <td class="text-end">@d.Quantity</td>
                <td class="text-end">@d.UnitCost.ToString("N2")</td>
                <td class="text-end">@((d.Quantity * d.UnitCost).ToString("N2"))</td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PurchaseInvoiceID" />
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
