<!-- Add this section to your existing Index.cshtml -->
<section class="featured-product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h4>Featured Products</h4>
                </div>
            </div>
        </div>
        <div class="row">
            @{
                var featuredProducts = ViewBag.FeaturedProducts as IEnumerable<DvdStore.Models.Products>;
                if (featuredProducts != null)
                {
                    foreach (var product in featuredProducts.Take(6))
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg"
                                     style="background-image: url('@Url.Content(product.ProductImageUrl)');">
                                    <div class="ep">$@product.Price</div>
                                    <div class="view"><i class="fa fa-shopping-cart"></i> Add to Cart</div>
                                </div>
                                <div class="product__item__text">
                                    <h5><a href="#">@product.tbl_Albums?.Title</a></h5>
                                    <div class="product__price">$@product.Price</div>
                                    <!-- Replace this in your Index.cshtml -->
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline add-to-cart-form">
                                        <input type="hidden" name="productId" value="@product.ProductID" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="add-cart-btn" style="background: none; border: none; color: #e53637; cursor: pointer;">
                                            + Add To Cart
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <a asp-controller="Home" asp-action="Products" class="primary-btn">View All Products</a>
            </div>
        </div>
    </div>
</section>