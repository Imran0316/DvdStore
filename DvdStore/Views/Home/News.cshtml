@model IEnumerable<DvdStore.Models.NewsPromotion>
@{
    ViewData["Title"] = "News & Promotions";
    Layout = "_Layout1";
}

<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="hero__text">
                    <h2>News & Promotions</h2>
                    <p>Stay updated with our latest news and special offers</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product spad">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title"
                                 style="height: 250px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <span class="badge bg-@(item.Type == "News" ? "info" : item.Type == "Promotion" ? "warning" : "success") mb-2">
                                @item.Type
                            </span>
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">
                                @(item.Content.Length > 150 ? item.Content.Substring(0, 150) + "..." : item.Content)
                            </p>                            <small class="text-muted">Published: @item.PublishDate.ToString("MMM dd, yyyy")</small>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
                <h4>No news or promotions available</h4>
                <p class="text-muted">Check back later for updates!</p>
            </div>
        }
    </div>
</section>