@model DvdStore.Models.Products
@{
    ViewData["Title"] = Model.tbl_Albums?.Title;
    Layout = "_Layout1";
}

<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="product__details__pic">
                    <img src="@Model.ProductImageUrl" alt="@Model.tbl_Albums?.Title">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="product__details__text">
                    <h3>@Model.tbl_Albums?.Title</h3>
                    <div class="product__details__price">$@Model.Price</div>
                    <p>@Model.tbl_Albums?.Description</p>

                    <div class="product__details__widget">
                        <ul>
                            <li>
                                <span>Producer:</span>
                                <p>@Model.tbl_Producers?.ProducerName</p>
                            </li>
                            <li>
                                <span>Supplier:</span>
                                <p>@Model.tbl_Suppliers?.SupplierName</p>
                            </li>
                            <li>
                                <span>Stock:</span>
                                <p>@Model.StockQuantity available</p>
                            </li>
                        </ul>
                    </div>

                    <div class="product__details__cart">
                        <div class="quantity">
                            <span>Quantity:</span>
                            <div class="pro-qty">
                                <input type="text" value="1">
                            </div>
                        </div>
                        <a href="#" class="primary-btn">ADD TO CART</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>