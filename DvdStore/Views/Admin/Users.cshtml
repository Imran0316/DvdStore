@model IEnumerable<DvdStore.Models.Users>
@{
    Layout = "Dashboard";
}

<div class="container mt-4">
    <h2>User Management</h2>

    <!-- Add Admin Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5>Create New Admin</h5>
        </div>
        <div class="card-body">
            <form asp-controller="Admin" asp-action="CreateAdmin" method="post">
                <div class="row">
                    <div class="col-md-3">
                        <input name="Name" class="form-control" placeholder="Full Name" required />
                    </div>
                    <div class="col-md-3">
                        <input name="Email" type="email" class="form-control" placeholder="Email" required />
                    </div>
                    <div class="col-md-3">
                        <input name="Phone" class="form-control" placeholder="Phone" required />
                    </div>
                    <div class="col-md-3">
                        <input name="Password" type="password" class="form-control" placeholder="Password" required />
                    </div>
                </div>
                <button type="submit" class="btn btn-success mt-2">Create Admin</button>
            </form>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>UserID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>
                        <span class="badge bg-@(user.Role == "Admin" ? "danger" : "primary")">
                            @user.Role
                        </span>
                    </td>
                    <td>@user.Created_At.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (user.Role != "Admin")
                        {
                            <a asp-controller="Admin" asp-action="MakeAdmin" asp-route-id="@user.UserID"
                               class="btn btn-sm btn-warning"
                               onclick="return confirm('Make this user an admin?')">Make Admin</a>
                        }
                        <a asp-controller="Admin" asp-action="Delete" asp-route-id="@user.UserID"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this user?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>