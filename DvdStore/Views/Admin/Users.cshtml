
@{
    Layout = "Dashboard";
}
@model IEnumerable<DvdStore.Models.Users>

<div class="container mt-4">
    <h2>Registered Users</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>UserID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.Created_At.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                    <a asp-controller="Admin"
                       asp-action="Delete"
                       asp-route-id="@user.UserID"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this user?');">
                        Delete
                    </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
