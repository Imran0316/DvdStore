@model IEnumerable<DvdStore.Models.Products>
@{
    ViewData["Title"] = "Products";
    Layout = "_Layout1";
}

<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="hero__text">
                    <h2>
                        @if (ViewBag.SelectedType != null)
                        {
                            <text>@ViewBag.SelectedType.ToUpper()</text>
                        }
                        else if (ViewBag.SelectedCategory > 0)
                        {
                            <text>CATEGORY PRODUCTS</text>
                        }
                        else
                        {
                            <text>ALL PRODUCTS</text>
                        }
                    </h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product spad">
    <div class="container">
        <div class="row">
            <!-- Sidebar Filters -->
            <div class="col-lg-3 col-md-4">
                <div class="filter-widget">
                    <h4>Product Types</h4>
                    <div class="fw-type">
                        <a href="@Url.Action("Games", "Category")" class="filter-btn @(ViewBag.SelectedType == "games" ? "active" : "")">
                            <i class="fas fa-gamepad"></i> Games
                        </a>
                        <a href="@Url.Action("Movies", "Category")" class="filter-btn @(ViewBag.SelectedType == "movies" ? "active" : "")">
                            <i class="fas fa-film"></i> Movies
                        </a>
                        <a href="@Url.Action("Music", "Category")" class="filter-btn @(ViewBag.SelectedType == "music" ? "active" : "")">
                            <i class="fas fa-music"></i> Music
                        </a>
                    </div>
                </div>

                <div class="filter-widget">
                    <h4>Categories</h4>
                    <ul class="category-list">
                        <li>
                            <a href="@Url.Action("Products", "Category")" class="@(ViewBag.SelectedCategory == 0 ? "active" : "")">
                                All Categories
                            </a>
                        </li>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <li>
                                <a href="@Url.Action("Products", "Category", new { id = category.CategoryID })"
                                   class="@(ViewBag.SelectedCategory == category.CategoryID ? "active" : "")">
                                    @category.CategoryName
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Products Grid -->
            <div class="col-lg-9 col-md-8">
                <div class="filter__item">
                    <div class="row">
                        <div class="col-lg-4 col-md-5">
                            <div class="filter__sort">
                                <span>Sort By</span>
                                <select>
                                    <option value="0">Default</option>
                                    <option value="1">Price (Low to High)</option>
                                    <option value="2">Price (High to Low)</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <div class="filter__found">
                                <h6><span>@Model.Count()</span> Products found</h6>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg"
                                     style="background-image: url('@Url.Content(product.ProductImageUrl)');">
                                    <div class="ep">$@product.Price</div>
                                    <div class="view"><i class="fa fa-shopping-cart"></i> Add to Cart</div>
                                </div>
                                <div class="product__item__text">
                                    <h5><a href="#">@product.tbl_Albums?.Title</a></h5>
                                    <ul>
                                        <li>By: @product.tbl_Producers?.ProducerName</li>
                                        <li>Stock: @product.StockQuantity</li>
                                        <li>Category: @product.tbl_Albums?.tbl_Category?.CategoryName</li>
                                    </ul>
                                    <div class="product__price">$@product.Price</div>
                                    <!-- Replace this in your Products.cshtml -->
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline add-to-cart-form">
                                        <input type="hidden" name="productId" value="@product.ProductID" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="add-cart-btn" style="background: none; border: none; color: #e53637; cursor: pointer;">
                                            + Add To Cart
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .filter-btn.active, .category-list a.active {
        background: #e53637 !important;
        color: white !important;
        border-color: #e53637 !important;
    }
</style>